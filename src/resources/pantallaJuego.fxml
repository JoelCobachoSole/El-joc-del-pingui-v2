<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.pantallaJuegoController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="newGame" mnemonicParsing="false" text="New" />
            <SeparatorMenuItem />
            <MenuItem fx:id="saveGame" mnemonicParsing="false" text="Save" />
            <MenuItem fx:id="loadGame" mnemonicParsing="false" text="Load" />
            <SeparatorMenuItem />
            <MenuItem fx:id="quitGame" mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>

    <!-- ✅ NUEVO: Label para mostrar el nombre del jugador -->
    <Label fx:id="nombreJugadorLabel" text="Jugador: " style="-fx-font-size: 18px; -fx-padding: 10;" />

    <BorderPane>
      <top>
        <GridPane fx:id="tablero" gridLinesVisible="true" prefHeight="500.0" prefWidth="500.0">
          <columnConstraints>
            <ColumnConstraints prefWidth="100.0" />
            <ColumnConstraints prefWidth="100.0" />
            <ColumnConstraints prefWidth="100.0" />
            <ColumnConstraints prefWidth="100.0" />
            <ColumnConstraints prefWidth="100.0" />
          </columnConstraints>
          <rowConstraints>
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
            <RowConstraints prefHeight="50.0" />
          </rowConstraints>
          <children>
            <Text text="Start">
              <font><Font size="30.0" /></font>
            </Text>
            <Text text="Finish" GridPane.columnIndex="4" GridPane.rowIndex="9">
              <font><Font size="30.0" /></font>
            </Text>
            <Circle fx:id="P1" fill="BLUE" radius="15.0" stroke="BLACK" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Circle fx:id="P2" fill="RED" radius="15.0" stroke="BLACK" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Circle fx:id="P3" fill="GREEN" radius="15.0" stroke="BLACK" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Circle fx:id="P4" fill="YELLOW" radius="15.0" stroke="BLACK" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
          </children>
        </GridPane>
      </top>

      <bottom>
        <HBox>
          <children>
            <AnchorPane minHeight="200.0" minWidth="300.0">
              <children>
                <Text fx:id="dadoResultText" layoutX="14.0" layoutY="120.0" text="Ha salido: " />
                <Button fx:id="dado" layoutX="181.0" layoutY="81.0" onAction="#handleDado" text="Dado" />
                <Button fx:id="botonInventario" layoutX="87.0" layoutY="14.0" onAction="#handleInventario" text="Inventario" />
                <Button fx:id="bolaDeNieve" layoutX="200.0" layoutY="150.0" onAction="#handleBolaDeNieve" text="Usar Bola de Nieve" />
                <Button fx:id="subornarOso" layoutX="200.0" layoutY="200.0" onAction="#handleSubornarOso" text="Subornar Oso" />
              </children>
            </AnchorPane>

            <ScrollPane minHeight="200.0" minWidth="680.0" vbarPolicy="NEVER">
              <content>
                <AnchorPane>
                  <children>
                    <Text fx:id="rapido_t" text="Dado rápido: 0" layoutX="10.0" layoutY="30.0" />
                    <Text fx:id="lento_t" text="Dado lento: 0" layoutX="250.0" layoutY="30.0" />
                    <Text fx:id="peces_t" text="Peces: 0" layoutX="500.0" layoutY="30.0" />
                    <Text fx:id="nieve_t" text="Bolas de nieve: 0" layoutX="750.0" layoutY="30.0" />
                    <Button fx:id="rapido" text="Usar" layoutX="55.0" layoutY="90.0" />
                    <Button fx:id="lento" text="Usar" layoutX="290.0" layoutY="90.0" />
                    <Button fx:id="peces" text="Usar" layoutX="505.0" layoutY="90.0" />
                    <Button fx:id="nieve" text="Usar" layoutX="810.0" layoutY="90.0" />
                  </children>
                </AnchorPane>
              </content>
            </ScrollPane>

            <AnchorPane minHeight="200.0" minWidth="300.0">
              <children>
                <Text fx:id="eventos" text="Evento ocurrido" layoutX="10.0" layoutY="30.0" />
              </children>
            </AnchorPane>
          </children>
        </HBox>
      </bottom>
    </BorderPane>
  </children>
</VBox>
